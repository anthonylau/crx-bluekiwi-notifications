{
  "manifest_version": 2,

  "name": "BlueKiwi ZEN Notifications for myatos.net",
  "description": "This is an unofficial extension for Atos Staff for use with BlueKiwi",
  "version": "0.3.4.1",

  "background": {
    "scripts": [
		"js/common.js",
		"js/jquery.js",
		"js/background.js"
	]
  },
  
  "icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
  
  "browser_action": {
	  "default_icon": {                    
      "19": "img/icon48.png",          
      "38": "img/icon48.png"          
    },
	"default_popup": "popup.html",
	"default_title": "BlueKiwi Notifier"
  },
  "permissions": [
	"https://zen.myatos.net/notification*",
	"notifications"
  ],
  
  "web_accessible_resources": [
    "img/icon128.png"
  ],
  
  "options_page": "options.html",
  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}