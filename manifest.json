{
  "manifest_version": 2,

  "name": "BlueKiwi Notifications",
  "description": "",
  "version": "0.3.3",

  "background": {
	//"persistent": false,
    "scripts": [
		"common.js",
		"jquery-2.0.0.min.js",
		"background.js"
	]
  },
  
  "browser_action": {
    "default_icon": "bluekiwi.ico",
	"default_popup": "popup.html"
  },
  "permissions": [
	"https://zen.myatos.net/notification*",
	"notifications"
  ],
  
  "web_accessible_resources": [
    "bluekiwi.ico"
  ],
  
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
